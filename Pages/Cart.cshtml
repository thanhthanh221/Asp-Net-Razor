@page
@model CartModel
<head>
	<title>Trang mua hàng</title>
</head>

	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-9 offset-lg-2 text-center">
					<div class="hero-text">
						<div class="hero-text-tablecell">
							<div class="breadcrumb-text">
							<h1>Thanh Toán</h1>
							<p>Fresh and Organic</p>
					    </div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
	<!-- breadcrumb-section -->
	<!-- end breadcrumb section -->
@if(Model.GetCartItems().Count()<= 0){
	<h1 style="text-align: center;" class=""> Bạn chưa đặt sản phẩm nào</h1>
	<a asp-page= "/Shop">Quay lại trang đặt hàng</a>

}
else{

	<!-- cart -->
	<div class="cart-section mt-150 mb-150">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="cart-table-wrap">
						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th class="product-remove"></th>
									<th class="product-image">Ảnh</th>
									<th class="product-name">Sản Phẩm</th>
									<th class="product-price">Giá</th>
									<th class="product-quantity">Số Lượng</th>
									<th class="product-total">Total</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model.GetCartItems())
								{
									<tr class="table-body-row">
										<td class="product-remove">
											<form method="post">
												<button type="submit" style="border: 0ch;padding: 0%;">
													<a asp-page ="./Cart_CRUD/DeleteCart" asp-route-productid= "@item.product.MaSanPham"><i class="far fa-window-close"></i></a>
												</button>
											</form>
										</td>
										<td class="product-image"><img src="~/img/products/product-img-@item.product.Name+.jpg" alt=""></td>
										<td class="product-name">@item.product.Name</td>
										<td class="product-price">@item.product.Price</td>
										<td class="product-quantity"><input type="number" placeholder="@item.quantity"></td>
										<td class="product-total">1</td>
								    </tr>
									
								}
							</tbody>
						</table>
					</div>
				</div>

				<div class="col-lg-4">
					<div class="total-section">
						<table class="total-table">
							<thead class="total-table-head">
								<tr class="table-total-row">
									<th>Total</th>
									<th>Price</th>
								</tr>
							</thead>
							<tbody>
								<tr class="total-data">
									<td><strong>Subtotal: </strong></td>
									<td>@Model.Sum VNĐ</td>
								</tr>
								<tr class="total-data">
									<td><strong>Shipping: </strong></td>
									<td>20000 VNĐ</td>
								</tr>
								@{
									int Tong = Model.Sum+20000;
								}
								<tr class="total-data">
									<td><strong>Total: </strong></td>
									<td>@Tong VNĐ</td>
								</tr>
							</tbody>
						</table>
						<div class="cart-buttons">
							<a asp-page = "./Cart" class="boxed-btn">Update Cart</a>
							<a href="checkout.html" class="boxed-btn black">Check Out</a>
						</div>
					</div>

					<div class="coupon-section">
						<h3>Nhập mã giảm giá</h3>
						<div class="coupon-form-wrap">
							<form action="index.html">
								<p><input type="text" placeholder="Mã"></p>
								<p><input type="submit" value="Nhập"></p>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end cart -->
	@section Scripts {
        <script>
          $(document).ready(function () {
              $(".updatecartitem").click(function (event) {
                  event.preventDefault();
                  var productid = $(this).attr("data-productid");
                  var quantity = $("#quantity-" + productid).val();
                  $.ajax({
                      type: "POST",
                      url:"@Url.RouteUrl("updatecart")",
                      data: {
                          productid: productid,
                          quantity:quantity
                      },
                      success: function (result) {
                          window.location.href = "@Url.RouteUrl("cart")";
                      }
                  });
              });
          });
        </script>
      }

}
