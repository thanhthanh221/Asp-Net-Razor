@page
@model RegisterModel
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đăng Kí</title>
    <link rel="shortcut icon" type="image/png" href="~/favicon.png">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

     <link rel="stylesheet" href="~/css/material-design-iconic-font.min.css">
     <link rel="stylesheet" href="https://registry.npmjs.org/bootstrap-icons/-/bootstrap-icons-1.8.1.tgz">

    <!-- Main css -->
    <link rel="stylesheet" href="~/css/Login_Register.css">
    
    <!--Fontawesome CDN-->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

</head>
<body>
    <div class="main">
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Đăng Kí</h2>
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register-form" id="register-form">
                            <div class="form-group">
                                <label asp-for="Input.Name"><i class="fas fa-user"></i></label>
                                <input asp-for="Input.Name" type="text" placeholder="Tên Tài Khoản"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Email"><i class="fas fa-envelope"></i></label>
                                <input asp-for="Input.Email" type="email" placeholder="Email của bạn"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"><i class="fas fa-lock"></i></label>
                                <input asp-for="Input.Password" type="password"  placeholder="Mật Khẩu"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.ConfirmPassword"><i class="fas fa-lock"></i></label>
                                <input asp-for="Input.ConfirmPassword" type="password"  placeholder="Nhập Lại Mật Khẩu"/>
                            </div>
                            <div class="form-group form-button">
                                <div asp-validation-summary="All"></div> 
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng Kí"/>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/img/Login_Register/signup-image.jpg" alt="sing up image"></figure>
                        <div class="social-login">
                            <span class="social-label">Sử dụng dịch vụ</span>
							<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
								<ul class="socials">
									@foreach (var provider in Model.ExternalLogins)
									{
										if(provider.DisplayName.Equals("Facebook")){
											<li><button style="border: 0ch;padding: 0%;" type="submit" name="provider" value="@provider.Name" title="Đăng nhập bằng @provider.DisplayName "><a><i class="display-flex-center zmdi zmdi-facebook"></i></a></button></li>
										}
										else{
                                            <li><button style="border: 0ch;padding: 0%;" type="submit" name="provider" value="@provider.Name" title="Đăng nhập bằng @provider.DisplayName "><a><i class="display-flex-center zmdi zmdi-google"></i></a></button></li>
										}
										
                                    }
                                </ul>
							</form>
                        </div>
                    </div>
                </div>
            </div>
            @section Scripts {
                <partial name="_ValidationScriptsPartial" />
            }
        </section>
    </div>

    <!-- JS -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
    